{
  "pluginAlias": "SynologyUPSInfo",
  "pluginType": "accessory",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Ger√§tename",
        "type": "string",
        "default": "Synology UPS"
      },
      "host": {
        "title": "Synology IP/Hostname",
        "type": "string"
      },
      "port": {
        "title": "SSH Port",
        "type": "number",
        "default": 22
      },
      "username": {
        "title": "SSH Benutzer",
        "type": "string"
      },
      "password": {
        "title": "SSH Passwort",
        "type": "string"
      },
      "command": {
        "title": "Kommando zur UPS-Abfrage",
        "type": "string",
        "default": "upsc ups@localhost"
      },
      "pollInterval": {
        "title": "Abfrageintervall (Sekunden)",
        "type": "integer",
        "default": 60
      },
      "includeLoadSensor": {
        "title": "UPS Load anzeigen",
        "type": "boolean",
        "default": false
      }
    },
    "required": ["host", "username", "password"]
  }
}
